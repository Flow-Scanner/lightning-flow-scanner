{
  "compilerOptions": {
    "moduleResolution": "Node16",
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
    ,
    "baseUrl": ".",
    "paths": {
      "@flow-scanner/lightning-flow-scanner-core": ["../core/types"],
      "@flow-scanner/lightning-flow-scanner-core/*": ["../core/types/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "references": [
    { "path": "../core" }
  ],
  "include": ["./src/**/*", "./test/**/*"]
}
