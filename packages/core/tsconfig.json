{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "outDir": "types",
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "downlevelIteration": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "out"]
}
