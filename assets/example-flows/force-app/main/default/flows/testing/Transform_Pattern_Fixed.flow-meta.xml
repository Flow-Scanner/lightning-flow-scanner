<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>This flow demonstrates the correct pattern using Transform instead of Loop + Assignment for better performance.</description>
    <environments>Default</environments>
    <interviewLabel>Transform Pattern {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Transform Pattern Fixed</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <transforms>
        <name>Transform_Accounts</name>
        <label>Transform Accounts</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <apexClass>TransformAccountsInvocable</apexClass>
        <connector>
            <targetReference>Update_Accounts</targetReference>
        </connector>
        <transformValues>
            <inputReference>AccountCollection</inputReference>
            <outputFieldApiName>AnnualRevenue</outputFieldApiName>
            <transformValueActions>
                <outputFieldApiName>AnnualRevenue</outputFieldApiName>
                <transformType>Assign</transformType>
                <value>
                    <numberValue>1000000.0</numberValue>
                </value>
            </transformValueActions>
            <transformValueActions>
                <outputFieldApiName>Rating</outputFieldApiName>
                <transformType>Assign</transformType>
                <value>
                    <stringValue>Hot</stringValue>
                </value>
            </transformValueActions>
        </transformValues>
    </transforms>
    <recordUpdates>
        <name>Update_Accounts</name>
        <label>Update Accounts</label>
        <locationX>176</locationX>
        <locationY>242</locationY>
        <inputReference>Transform_Accounts</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Transform_Accounts</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <variables>
        <name>AccountCollection</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <objectType>Account</objectType>
    </variables>
</Flow>